<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bootstrap To-Do App</title>
  <link rel="stylesheet" href="/css/main.css" >
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  <style>
    .completed {
      text-decoration: line-through;
      color: #6c757d;
    }
    main {
      margin-top: 80px;
    }
  </style>
</head>
<body>
  <%- include("./partials/header.ejs")  -%>

  <main class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
          
      
        <!-- Products Section -->
        <section id="products">
          <div class="row mb-3">
            <div class="col">
              <h2>Product Inventory</h2>
              
                <button class="btn btn-success <%- locals?.session?.admin == true ? '' : 'disabled' -%>" id="addProductBtn">
                  <a href="/products/new/">
                    <i class="bi bi-plus-circle"></i> Add Product  
                  </a>
                </button>
            </div>
          </div>
          
          <div class="col" id="productGrid">
            <!-- Product cards will be added here -->
            <% locals?.products?.forEach(product => { %>
              <div class="card mb-3">
                <div class="card-body">
                  <h5 class="card-title"><%= product.name %></h5>
                  <p class="card-text">Price: $<%= product.price/100 %></p>
                  <p class="card-text">Stock: <%= product.stock %></p>
                  <button class="btn btn-sm btn-primary edit-product-btn <%- locals?.session?.admin == true ? '' : 'disabled' -%>" data-id="<%= product.id %>">
                    <a href="/products/edit/<%= product.id %>">
                      <i class="bi bi-pencil-square"></i>Edit
                    </a>
                  </button>
                  <button class="btn btn-sm btn-danger delete-product-btn <%- locals?.session?.admin == true ? '' : 'disabled' -%>" data-id="<%= product.id %>">
                    <a href="/products/delete/<%= product.id %>">
                      <i class="bi bi-trash"></i>Delete
                    </a>
                  </button>
                </div>
              </div>
            <% }); %>


            

          </div>
        </section>
        
      </div>
    </div>
  </main>

  <script src="/js/access.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  
</body>
</html>
