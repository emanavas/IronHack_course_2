<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="css/styles.css">
</head>
<body>
  <!-- Navbar (same as index.html) -->
  <%- include('partials/navbar') %>

  <main class="container my-5">
    <!--error banner-->
    <% if (locals?.errors) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%- errors -%>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <div class="row">
      <div class="col-md-4">
        <div class="card">
          <div class="card-body text-center">
            <img src="https://via.placeholder.com/150" class="rounded-circle mb-3" alt="Avatar">
            <h5 class="card-title"><%= locals?.user?.name || 'User Name' %></h5>
            <p class="text-muted"><%= locals?.user?.user || 'user.email@example.com' %></p>
            <button class="btn btn-outline-primary btn-sm">Edit Profile</button>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Profile Information</h5>
            <div class="row mb-3">
              <div class="col-sm-3">
                <h6 class="mb-0">Full Name</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                <%= locals?.user?.name || 'Fail getting Info' %>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-sm-3">
                <h6 class="mb-0">Email</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                <%= locals?.user?.user || 'Fail getting Info' %>
              </div>
              <br>
              <div class="col-sm-3">
                <h6 class="mb-0">Admin</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                <%= locals?.user?.isAdmin === true ? 'Yes' : 'No' || 'Fail getting Info' %>
              </div>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Footer (same as index.html) -->
  <%- include('partials/footer') %>

</body>
</html>