<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>LearnHub - Online Courses</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
  <style>
    .hero-section {
      background-color: #1c1d1f;
      color: white;
      padding: 80px 0;
    }
    .course-card {
      transition: transform 0.3s;
    }
    .course-card:hover {
      transform: translateY(-5px);
    }
    .rating {
      color: #f4c150;
    }
    .category-badge {
      background-color: #f7f9fa;
      border: 1px solid #d1d7dc;
      padding: 4px 8px;
      border-radius: 4px;
      font-size: 0.8rem;
    }
    .navbar-brand {
      font-weight: bold;
      font-size: 1.5rem;
    }
    .search-box {
      width: 400px;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>

  <!-- Hero Section -->
  <section class="hero-section">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-6">
          <h1>Learn the skills of tomorrow, today</h1>
          <p class="lead">Over 200,000 online courses to choose from</p>
          <button class="btn btn-primary btn-lg">Explore Courses</button>
        </div>
        <div class="col-md-6">
          <img src="/imgs\Best-online-course-platforms.webp" alt="Learning illustration" class="img-fluid rounded">
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Courses -->
  <section class="py-5 bg-light">
    <div class="container">
      <div class="d-flex justify-content-between  ">
        
          <h2 class="mb-4">Featured Courses</h2>
          <div>
            <a href="/courses/new" class="btn btn-success">Add Course</a>
          </div>
          
        
        
      </div>  
      <div class="row d-flex d-wrap">
        <% if (locals?.courses && locals?.courses.length > 0) { %>
          <% courses.forEach(course => { %>
            <div class="col-md-4 d-flex align-items-center">
              <div class="card course-card">
                <img src="<%= course.image ? `data:image/jpeg;base64,${course.image.toString('base64')}` : '/imgs/coding.jpg' %>" class="card-img-top" alt="Course Image">
                <div class="card-body">
                  <h5 class="card-title"><%= course.title %></h5>
                  <p class="text-muted"><%= course.description %></p>
                  <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="rating">
                      <i class="fas fa-star"></i> <%- (Math.random() * 3 + 2).toFixed(1) %>
                    </span>
                    <span class="text-muted"><%- Math.floor(Math.random() * 1000) %></span>
                  </div>
                  <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><%= course.is_public ? 'Public' : 'Private' %></h5>
                    <span class="category-badge"><%= course.category %></span>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="col">
            <p>Not available courses yet.</p>
          </div>
        <% } %>
      </div>
    </div>
  </section>

  <!-- Categories -->
  <section class="py-5">
    <div class="container">
      <h2 class="mb-4">Top Categories</h2>
      <div class="row">
        <div class="col-md-3 mb-4">
          <div class="card h-100">
            <div class="card-body text-center">
              <i class="fas fa-laptop-code fa-3x mb-3 text-primary"></i>
              <h5>Development</h5>
              <p class="text-muted">1,200 courses</p>
            </div>
          </div>
        </div>
        <div class="col-md-3 mb-4">
          <div class="card h-100">
            <div class="card-body text-center">
              <i class="fas fa-chart-line fa-3x mb-3 text-success"></i>
              <h5>Business</h5>
              <p class="text-muted">850 courses</p>
            </div>
          </div>
        </div>
        <div class="col-md-3 mb-4">
          <div class="card h-100">
            <div class="card-body text-center">
              <i class="fas fa-paint-brush fa-3x mb-3 text-danger"></i>
              <h5>Design</h5>
              <p class="text-muted">700 courses</p>
            </div>
          </div>
        </div>
        <div class="col-md-3 mb-4">
          <div class="card h-100">
            <div class="card-body text-center">
              <i class="fas fa-calculator fa-3x mb-3 text-info"></i>
              <h5>Finance</h5>
              <p class="text-muted">500 courses</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('partials/footer') %>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
