{
  "name": "ironhack-course-2",
  "version": "1.0.0",
  "description": "A monorepo for the IronHack course 2 projects.",
  "main": "index.js",
  "scripts": {
    "start:proy1": "npm --workspace=Proy1 start",
    "start:proy2": "npm --workspace=Proy2_Cursos start",
    "start:proy3": "npm --workspace=Proy3_Pedidos start",
    "start:all": "npm-run-all --parallel start:proy1 start:proy2 start:proy3",
    "all": "concurrently --kill-others \"npm run start:proy1\" \"npm run start:proy2\" \"npm run start:proy3\""
  },
  "workspaces": [
    "Proy1",
    "Proy2_Cursos",
    "Proy3_Pedidos"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.2.0"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
