<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In - FoodExpress</title>
    <link rel="stylesheet" type="text/css" href="/style.css" />
    <link rel="stylesheet" type="text/css" href="/lib_style.css" />

    <!-- Add favicon-->
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico" />
    <!--bootstrap-->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
  </head>
  <body>
    <main>
      <!-- Navbar -->
      <%- include('partials/navbar') %>

      <!-- Login Form Section -->
      <section class="py-5 bg-light">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
              <div class="card shadow-sm">
                <div class="card-body p-5">
                  <h2 class="card-title text-center mb-4">Sign In</h2>

                  <% if (locals.errors) { %>
                  <div class="alert alert-danger" role="alert">
                    <%- errors %>
                  </div>
                  <% } %>

                  <form action="/login" method="POST">
                    <% if (process.env.NODE_ENV === 'development' && locals.users && users.length > 0) { %>
                    <div class="mb-3">
                      <label for="userSelector" class="form-label">Select User (Dev Only)</label>
                      <select class="form-select" id="userSelector">
                        <option value="">-- Select a user --</option>
                        <% users.forEach(function(user) { %>
                          <option value="<%= user.email %>" data-password="<%= user.plaintextPassword %>"><%= user.email %> (<%= user.role %>)</option>
                        <% }); %>
                      </select>
                    </div>
                    <% } %>
                    <div class="mb-3">
                      <label for="email" class="form-label"
                        >Email address</label
                      >
                      <input
                        type="email"
                        class="form-control"
                        id="email"
                        name="email"
                        value="<%= (locals.oldData && oldData.email) ? oldData.email : '' %>"
                        required
                      />
                    </div>
                    <div class="mb-3">
                      <label for="password" class="form-label">Password</label>
                      <input
                        type="password"
                        class="form-control"
                        id="password"
                        name="password"
                        required
                      />
                    </div>
                    <div class="d-grid">
                      <button type="submit" class="btn btn-danger btn-lg">
                        Sign In
                      </button>
                    </div>
                  </form>
                  <% if (process.env.NODE_ENV === 'development') { %>
                  <script>
                    document.addEventListener('DOMContentLoaded', function() {
                      const userSelector = document.getElementById('userSelector');
                      const emailInput = document.getElementById('email');
                      const passwordInput = document.getElementById('password');

                      if (userSelector) {
                        userSelector.addEventListener('change', function() {
                          const selectedOption = userSelector.options[userSelector.selectedIndex];
                          const selectedEmail = selectedOption.value;
                          const selectedPassword = selectedOption.dataset.password;

                          if (selectedEmail) {
                            emailInput.value = selectedEmail;
                            passwordInput.value = selectedPassword;
                          } else {
                            emailInput.value = '';
                            passwordInput.value = '';
                          }
                        });
                      }
                    });
                  </script>
                  <% } %>
                  <div class="text-center mt-4">
                    <p class="text-muted">
                      Don't have an account? <a href="/signup">Register here</a>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Footer -->
      <%- include('partials/footer') %>
    </main>
  </body>
</html>
