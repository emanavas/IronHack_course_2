<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Restaurant Orders - FoodExpress</title>
    <link rel="stylesheet" type="text/css" href="/css/styles.css" />
    <link rel="stylesheet" type="text/css" href="/css/main.css" />
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      body {
        background-color: #f8f9fa;
        overflow-x: hidden;
      }
      .sidebar {
        padding-top: 78px;
        background-color: #212529;
      }
      .sidebar .nav-link {
        color: #adb5bd;
        padding: 0.75rem 1rem;
        transition: background-color 0.2s, color 0.2s;
      }
      .sidebar .nav-link:hover {
        color: #fff;
        background-color: #495057;
      }
      .sidebar .nav-link.active {
        color: #fff;
        background-color: #dc3545;
      }
      .order-item-img {
        width: 50px;
        height: 50px;
        object-fit: cover;
        border-radius: 0.25rem;
      }
    </style>
  </head>
  <body>
    <%- include('../partials/navbar') %>

    <main class="row g-0">
      <%- include('../partials/sidebar_rest') %>

      <div class="col-lg-9 col-md-9 d-flex flex-column p-4">
        <h1 class="mb-4">Manage Orders</h1>

        <div class="card">
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-hover align-middle">
                <thead>
                  <tr>
                    <th>Order ID</th>
                    <th>Customer</th>
                    <th>Address</th>
                    <th>Items</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (orders && orders.length > 0) { %> <% orders.forEach(order => { %>
                  <tr>
                    <td><%= order.order_id %></td>
                    <td><%= order.client.firstName %> <%= order.client.lastName %></td>
                    <td>
                      <%= order.deliveryAddress.street %>, <%= order.deliveryAddress.city %>
                    </td>
                    <td>
                      <ul class="list-unstyled">
                        <% order.items.forEach(item => { %>
                        <li>
                          <%= item.quantity %>x <%= item.menuItem.name %> ($<%= item.unitPrice.toFixed(2) %>)
                        </li>
                        <% }) %>
                      </ul>
                    </td>
                    <td>$<%= order.total_amount.toFixed(2) %></td>
                    <td>
                      <form action="/restaurant/orders/<%= order.order_id %>/status" method="POST">
                        <select name="status" class="form-select form-select-sm" onchange="this.form.submit()">
                          <option value="pending" <%= order.status === 'pending' ? 'selected' : '' %>>Pending</option>
                          <option value="preparing" <%= order.status === 'preparing' ? 'selected' : '' %>>Preparing</option>
                          <option value="delivered" <%= order.status === 'delivered' ? 'selected' : '' %>>Delivered</option>
                        </select>
                      </form>
                    </td>
                    <td>
                      <button
                        class="btn btn-sm btn-info btn-details"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#collapseOrderDetails<%= order.order_id %>"
                        aria-expanded="false"
                        aria-controls="collapseOrderDetails<%= order.order_id %>"
                      >
                        Details
                        <i class="fas fa-chevron-down ms-1"></i>
                      </button>
                    </td>
                  </tr>
                  <tr>
                    <td colspan="7" class="p-0" style="border: none">
                      <div class="collapse" id="collapseOrderDetails<%= order.order_id %>">
                        <div class="card card-body bg-light">
                          <p><strong>Customer:</strong> <%= order.client.firstName %> <%= order.client.lastName %></p>
                          <p><strong>Order Date:</strong> <%= order.createdAt.toLocaleString() %></p>
                          <p><strong>Delivery Address:</strong> <%= order.deliveryAddress.street %>, <%= order.deliveryAddress.aptSuite ? order.deliveryAddress.aptSuite + ',' : '' %> <%= order.deliveryAddress.city %>, <%= order.deliveryAddress.state %> <%= order.deliveryAddress.zipCode %></p>
                          <p><strong>Total Amount:</strong> $<%= order.total_amount.toFixed(2) %></p>
                          <p><strong>Current Status:</strong> <%= order.status %></p>

                          <h6>Items:</h6>
                          <ul class="list-group mb-3">
                            <% order.items.forEach(item => { %>
                              <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                  <img src="/<%= item.menuItem.image %>" alt="<%= item.menuItem.name %>" class="order-item-img me-2">
                                  <%= item.quantity %>x <%= item.menuItem.name %>
                                </div>
                                <span>$<%= (item.quantity * item.unitPrice).toFixed(2) %></span>
                              </li>
                            <% }) %>
                          </ul>

                          <h6>Update Status:</h6>
                          <form action="/restaurant/orders/<%= order.order_id %>/status" method="POST">
                            <div class="input-group">
                              <select name="status" class="form-select">
                                <option value="pending" <%= order.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                <option value="preparing" <%= order.status === 'preparing' ? 'selected' : '' %>>Preparing</option>
                                <option value="delivered" <%= order.status === 'delivered' ? 'selected' : '' %>>Delivered</option>
                              </select>
                              <button type="submit" class="btn btn-primary">Update</button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </td>
                  </tr>
                  <% }) %> <% } else { %>
                  <tr>
                    <td colspan="7" class="text-center">No orders found for your restaurant.</td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>