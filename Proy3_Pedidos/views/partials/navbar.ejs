<div class="row">
  <div class="col-md-12">
    <nav
      class="navbar navbar-expand-lg bg-danger sticky-top"
      data-bs-theme="dark"
    >
      <div class="container-fluid">
        <a class="navbar-brand text-white p-3" href="/">FoodExpress</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active text-white" aria-current="page" href="/"
                >Home</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link text-white-50" href="#">How it works</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link text-white-50"
                aria-disabled="true"
                href="#restaurants"
                >Restaurants</a
              >
            </li>
          </ul>
          
          <% if (locals?.session?.role) { %> 
            <% if(['platform_admin','restaurant_admin'].includes(locals?.session?.role)){ %>
            <a href="/admin" class="btn btn-warning mx-lg-3 my-1">Admin Panel</a>
            <% }else if(locals.session.role == 'client'){ %>
              <a href="/cart" class="btn btn-outline-light my-1">
                <i class="fas fa-shopping-cart"></i> Cart
                <span id="cart-count" class="badge bg-light text-danger ms-1 rounded-pill">0</span>
              </a>
            <% } %>
            <a href="/profile" class="btn btn-light mx-lg-3 my-1"> My Profile </a>
            <a href="/logout" class="btn btn-outline-light my-1"> Logout </a>
          <% } else { %>
            <a href="/cart" class="btn btn-outline-light my-1">
              <i class="fas fa-shopping-cart"></i> Cart
              <span id="cart-count" class="badge bg-light text-danger ms-1 rounded-pill">0</span>
            </a>
          <a href="/login" class="btn btn-light mx-lg-3 my-1"> Sign In </a>
          <a href="/signup" class="btn btn-outline-light my-1"> Register </a>
          <% } %>
        </div>
      </div>
    </nav>
  </div>

  <!--space to show errors or messages-->
  <div id="message_space" class="container">
    <% if (locals.error && locals.error != "") { %>
    <div
      class="alert alert-danger alert-dismissible fade show m-0"
      role="alert"
    >
      <%= locals.error %>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
    <% } %> <% if (locals.success && locals.success != "") { %>
    <div
      class="alert alert-success alert-dismissible fade show m-0"
      role="alert"
    >
      <%= locals.success %>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
    <% } %> <% if (locals.info && locals.info != "") { %>
    <div class="alert alert-info alert-dismissible fade show m-0" role="alert">
      <%= locals.info %>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
    <% } %>
  </div>
</div>